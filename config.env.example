FFMPEG_BIN=ffmpeg
FFPROBE_BIN=ffprobe
TIMEOUT_BIN=timeout

# Camera
CAM_IP=192.168.0.201

# YouTube ingest (recommended: RTMPS)
YT_URL=rtmps://a.rtmps.youtube.com/live2
YT_KEY=YOUR_STREAM_KEY_HERE

# Offline output canvas
OUT_WIDTH=1280
OUT_HEIGHT=720

# Encoding (recommended defaults for MW5 stream=1 -> YouTube)
FPS=25
GOP=50
VBITRATE=1500k
VBUFSIZE=3000k
ABITRATE=128k

# Encoder: libx264 is the most predictable on Raspberry Pi
# (Switch to h264_v4l2m2m only after you confirmed it works reliably on your system.)
VIDEO_ENCODER=libx264
X264_PRESET=veryfast
X264_TUNE=zerolatency

# RTSP socket timeout (microseconds)
STIMEOUT_US=15000000

# Snapshot refresh (used for offline mode background image)
SNAPSHOT_INTERVAL_SEC=300
SNAPSHOT_TIMEOUT_SEC=8
SNAPSHOT_RETRIES=2
SNAPSHOT_DELAY_SEC=2

# Offline overlay text
OFFLINE_TEXT="Camera sleeping (solar) - last frame"
OFFLINE_SHOW_TIME=1
OFFLINE_TEXT_SIZE=36
OFFLINE_TEXT_COLOR=white
OFFLINE_BOX_COLOR=black@0.45
OFFLINE_MARGIN=24
FONT_FILE=/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf