# Binaries (useful for portability/testing)
FFMPEG_BIN="ffmpeg"
FFPROBE_BIN="ffprobe"
TIMEOUT_BIN="timeout"

# Camera
CAM_IP="192.168.1.50"

# YouTube ingest base URL (no trailing slash)
YT_URL="rtmps://a.rtmps.youtube.com/live2"
YT_KEY="YOUR_STREAM_KEY"

# Output resolution for OFFLINE mode
OUT_WIDTH="1280"
OUT_HEIGHT="720"

# Encoding (YouTube-friendly defaults)
FPS="30"
GOP="60"                 # 2 seconds at 30 fps
VBITRATE="3000k"
VBUFSIZE="6000k"         # ~2x VBITRATE
ABITRATE="128k"

# Prefer Pi4 hardware encoder, fallback to libx264 if not available
VIDEO_ENCODER="h264_v4l2m2m"   # or "libx264"
X264_PRESET="veryfast"
X264_TUNE="zerolatency"

# Timeouts (microseconds) for RTSP I/O in ffmpeg/ffprobe
RW_TIMEOUT_US="15000000"
STIMEOUT_US="15000000"

# RTSP probe (manager) settings
PROBE_TIMEOUT_SEC="5"
PROBE_STIMEOUT_US="5000000"
PROBE_RETRIES="3"
PROBE_DELAY_SEC="2"

# Snapshot refresh (manager) settings
SNAPSHOT_INTERVAL_SEC="300"
SNAPSHOT_TIMEOUT_SEC="8"
SNAPSHOT_RETRIES="2"
SNAPSHOT_DELAY_SEC="2"

# Offline fallback overlay text
OFFLINE_TEXT="Camera sleeping (solar) - last frame"
OFFLINE_SHOW_TIME="1"            # 1 = show timestamp line, 0 = no timestamp
OFFLINE_TEXT_SIZE="36"
OFFLINE_TEXT_COLOR="white"
OFFLINE_BOX_COLOR="black@0.45"
OFFLINE_MARGIN="24"

# Font file for drawtext (DejaVu Sans is common on Raspberry Pi OS)
FONT_FILE="/usr/share/fonts/truetype/dejavu/DejaVuSans.ttf"